{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "osc99": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "shell",
          "style": "diamond",
          // "leading_diamond_default": "╭─",
          "leading_diamond": "╭─",
          "trailing_diamond": "",
          "foreground": "#F65151",
          "background": "#2E2828",
          "properties": {}
        },
//        {
//          "type": "root",
//          "style": "diamond",
//          "leading_diamond": "",
//          "trailing_diamond": "",
//          "foreground": "#f7e92b",
//          "background": "#F65151",
//          "properties": {
//            "root_icon": "\uf292",
//            "prefix": "<parentBackground>\uE0B0</> "
//          }
//        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#FEF4F4",
          "background": "#503A3A",
          "properties": {
            "style": "full",
            "enable_hyperlink": true
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#503A3A",
          "background": "#FFFB38",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#c5e478{{ end }}",
            "{{ if gt .Ahead 0 }}#C792EA{{ end }}",
            "{{ if gt .Behind 0 }}#C792EA{{ end }}"
          ],
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "template": "{{ .HEAD }} {{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uF046 {{ .Staging.String }}</>{{ end }}"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "node",
          "style": "diamond",
          "leading_diamond": " \uE0B6",
          "trailing_diamond": "\uE0B4",
          "foreground": "#3C873A",
          "background": "#503A3A",
          "properties": {
            "prefix": "\uE718 ",
            "postfix": "",
            "display_package_manager": true,
            "yarn_icon": " <#348cba></>",
            "npm_icon": " <#cc3a3a></> "
          }
        }
        // {
        //   "type": "time",
        //   "style": "diamond",
        //   "invert_powerline": true,
        //   "leading_diamond": " \uE0B6",
        //   "trailing_diamond": "\uE0B4",
        //   "background": "#2E2828",
        //   "foreground": "#707070",
        //   "properties": {
        //     "prefix": " \uf5ef ",
        //     "postfix": " "
        //   }
        // }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#F65151",
          "properties": {
            "prefix": "",
            "postfix": "",
            // "text_default": "╰─",
            "text": "╰─"
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#FEF4F4",
          "properties": {
            "prefix": "\u276F",
            "display_exit_code": false,
            "always_enabled": true,
            "error_color": "#ef5350"
          }
        }
      ]
    }
  ]
}
